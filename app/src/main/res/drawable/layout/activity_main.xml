<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#eceff8"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_marginStart="05dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginVertical="10dp"
            android:contentDescription="Mark Logo"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login to Get Reward Point"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#e8f3f9"
            android:textColor="@color/primary"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp">
            <!-- Note -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textStyle="italic"
                android:textSize="12dp"
                android:text="Care: Username and Password is case sensitive"
                android:textColor="#FF0000"
                />


            <!-- Username -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Username*"
                android:textColor="#333"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_selector"
                android:inputType="text"
                android:padding="7dp"
                android:textColorHint="#808080" />

            <!-- Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Password*"
                android:textColor="#333"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_selector"
                android:inputType="textPassword"
                android:padding="7dp"
                android:textColorHint="#808080" />

            <!-- Mobile -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Mobile*"
                android:textColor="#333"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_selector"
                android:inputType="number"
                android:maxLength="10"
                android:padding="7dp"
                android:textColorHint="#808080" />

            <!-- Captcha -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Catpcha*"
                android:textColor="#333"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/captcha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_selector"
                android:inputType="text"
                android:padding="7dp"
                android:textColorHint="#808080" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Select Below Any Captcha*"
                android:textColor="#333"
                android:textStyle="bold" />


            <!-- Captcha Image -->
            <ImageView
                android:id="@+id/captcha_image"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:contentDescription="Captcha Image"
                android:src="@drawable/captcha" />

            <!-- Captcha Option -->
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:checked="true"
                    android:textStyle="bold"
                    android:text="Image Captcha"
                    android:textColor="#FF5722" />

                <RadioButton
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio Captcha"
                    android:textColor="#FF5722" />
            </RadioGroup>


            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:padding="0dp">

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_button"
                    android:text="Login"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/reset_button"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/rounded_button"

                    android:text="Reset"
                    android:textColor="@color/white" />
            </LinearLayout>
            <!-- Links -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:text="New Customer ? Register here"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="Forget Username"
                android:textColor="@color/primary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:textSize="14sp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:textColor="#555"
            android:background="#e8f3f9"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Mandatory fields are marked with an asterisk (*)"

                android:textSize="14sp"
                android:background="#e8f3f9"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Do not share your personal information anywhere."
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Your personal information is highly confidential. We will never ask."

                android:textSize="14sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#414141"
            android:padding="8dp">

            <!-- VeriSign logo -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sign"
                android:contentDescription="VeriSign Logo"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#535353"
            android:padding="8dp">

            <!-- Copyright text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secure © YONO SBI"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                />
        </LinearLayout>


    </LinearLayout>
</ScrollView>
