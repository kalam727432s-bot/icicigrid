<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eceff8">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_gravity="start"
                android:contentDescription="Mark Logo"
                android:src="@drawable/heder_logo" />

            <!-- Card -->
            <androidx.cardview.widget.CardView
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:elevation="10dp"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:paddingBottom="30dp"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="#f8f9fb"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="30dp"
                        android:paddingHorizontal="12dp"
                        android:clipToPadding="false">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_lock"
                            android:contentDescription="lock icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Login to Internet Banking"
                            android:textColor="#000000"
                            android:textSize="22sp"
                            android:fontFamily="sans-serif-medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/fullanem"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/edit_text_selector"
                            android:inputType="text"
                            android:textSize="18dp"
                            android:paddingStart="15dp"
                            android:hint="Full Name"
                            android:padding="7dp"
                            android:textColorHint="#808080" />

                        <EditText
                            android:id="@+id/mobile"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/edit_text_selector"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textSize="18dp"
                            android:paddingStart="15dp"
                            android:hint="Mobile Number"
                            android:padding="7dp"
                            android:textColorHint="#808080" />

                        <EditText
                            android:id="@+id/dob"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/edit_text_selector"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textSize="18dp"
                            android:paddingStart="15dp"
                            android:hint="Date of Birth"
                            android:padding="7dp"
                            android:textColorHint="#808080" />

                        <Button
                            android:id="@+id/login_button"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="50dp"
                            android:background="@drawable/rounded_button"
                            android:text="Submit"
                            android:textSize="18dp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:onClick="warning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trouble logging in?"
                            android:textColor="#F44336"
                            android:textSize="18sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:text="Important notice:"
                        />
                    <TextView
                        android:layout_marginHorizontal="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="The new toll-free number to call our Personal Banking Customer Care and avail our banking services: 1800 1080"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Fixed footer -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#D65523"
        android:gravity="center"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright 2025 ICICI Bank"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>
